#!/bin/sh -xe
git describe --tags --abbrev=0 > version.txt
if [ -d wheelhouse ]
then
    mv wheelhouse wheelhouse.old
fi
python setup.py bdist_wheel
pip wheel --wheel-dir wheelhouse --find-links dist --no-cache-dir --find-links wheelhouse.old -r requirements.txt
pip install --no-index --find-links wheelhouse -r requirements.txt
