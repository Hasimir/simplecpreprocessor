#!/bin/sh -xe
git describe --tags --abbrev=0 > version.txt
if [ -d wheelhouse ]
then
    mv wheelhouse wheelhouse.old
fi
python setup.py bdist_wheel --dist-dir wheelhouse.old
pip wheel --wheel-dir wheelhouse -r requirements.txt --no-cache-dir --find-links wheelhouse.old
pip install --no-index --find-links wheelhouse -r requirements.txt
